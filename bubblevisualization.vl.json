{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Happiness based off GDP and life expectancy",
  "data": {
    "url": "https://raw.githubusercontent.com/mguo35/FIT3179/main/2019.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.GDP_per_capita > 0"},
    {"filter": "datum.Healthy_life_expectancy > 0"},
    {
      "filter": "Continent_selection == null || datum.Continent ==Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "GDP_per_capita",
      "type": "quantitative",
      "title": "GDP per capita",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear"}
    },
    "y": {
      "field": "Healthy_life_expectancy",
      "type": "quantitative",
      "title": "Healthy life expectancy",
      "axis": {"tickCount": 6},
      "scale": {"type": "linear"}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Overall_rank",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 50, 100, 150],
            "range": [10, 50, 150, 200, 300]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America ",
              "Europe",
              "Africa ",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country_or_region", "title": "Country", "type": "nominal"},
          {
            "field": "Overall_rank",
            "title": "Overall_rank",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "GDP_per_capita",
            "title": "GDP per Capita",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Healthy_life_expectancy",
            "title": "Healthy Life Expectancy",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country_or_region", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country_or_region'] == 'China' || datum['Country_or_region'] =='Singapore' || datum['Country_or_region'] == 'Australia' || datum['Country_or_region'] == 'India' || datum['Country_or_region'] == 'Sierra Leone' || datum['Country_or_region'] == 'Yemen' ||datum['Country_or_region'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country_or_region", "title": "Country", "type": "nominal"},
          {
            "field": "Overall_rank",
            "title": "Overall Rank",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "GDP_per_capita",
            "title": "GDP per Capita",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Healthy_life_expectancy",
            "title": "Healthy Life Expectancy",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    }
  ]
}